<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expDisplay"
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:layout_weight="1"
        android:background="@color/light_gray"
        android:ems="10"
        android:gravity="right|bottom"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/lighter_gray"
        android:textSize="50sp"
        app:autoSizeMaxTextSize="50sp"
        app:autoSizeTextType="none" />

    <TextView
        android:id="@+id/mainDisplay"
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_marginBottom="2pt"
        android:layout_weight="1"
        android:background="@color/light_gray"
        android:ems="10"
        android:gravity="end|center"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/white"
        android:textSize="70sp"
        app:autoSizeTextType="uniform" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:id="@+id/btnClr"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="c"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/tealA700"
                android:layout_marginRight="1pt"
                android:onClick="clearScreen"
            />
            <Button
                android:id="@+id/btnDiv"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/tealA700"
                android:layout_marginRight="1pt"
                android:onClick="opPress"
                />
            <Button
                android:id="@+id/btnMult"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="×"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/tealA700"
                android:layout_marginRight="1pt"
                android:onClick="opPress"
                />
            <Button
                android:id="@+id/btnDel"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:paddingLeft="43sp"
                android:drawableLeft="@drawable/ic_baseline_backspace_24"
                android:background="@color/tealA700"
                android:onClick="delPress"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/dark_gray"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"
                />

            <Button
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/dark_gray"
                android:layout_marginRight="1pt"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btnSign"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:text="±"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/tealA700"
                android:onClick="numberPress"
                android:layout_marginBottom="1pt"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/dark_gray"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/dark_gray"
                android:layout_marginRight="1pt"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btnMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/tealA700"
                android:onClick="opPress"
                android:layout_marginBottom="1pt"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/dark_gray"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"/>
            <Button
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/dark_gray"
                android:layout_marginRight="1pt"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btnAdd"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/tealA700"
                android:onClick="opPress"
                android:layout_marginBottom="1pt"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/dark_gray"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btnPoint"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btnPct"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/dark_gray"
                android:layout_marginRight="1pt"
                android:onClick="numberPress"
                />
            <Button
                android:id="@+id/btnEquals"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/orange"
                android:onClick="operate"
                />
        </TableRow>


    </TableLayout>
</LinearLayout>
